{% extends 'base.html.twig' %}

{% block body %}
	


	<div class="container">
		<div class="row">
			<h1>Combats de {{ user.name }} </h1>
			<ul class="list-group">
				{% for fight in fights|sort|reverse %}
					<li class="list-group-item">
						<div class="panel-title row"> 
							<div class="col-sm-10">
		                    <h4>
			                    <a href="{{ path('fight', { 'id' : fight.id }) }}"> 

			                    Combat nÂ° {{ fight.id }} 
			                    {% if fight.isOver %}
			                    	<span class="alert alert-success">
			                    		
			                    			{#  ANCIEN CODE :   Vainqueur : {{ user.name }} #}
								Vainqueur :
											{{ fight.winner.name }}


			                    	</span>
			                    {% else %}
			                    	<span class="alert alert-warning">
			                    		
			                    			Combat en cours 
			                    	</span>
			                    {% endif %}


			                    </a>
			                </h4>
			                </div>
		                    <div class="col-sm-6">
		                    	{{ include('template/show_pokemon.html.twig', { 'pokemon': fight.pokemon1 }) }}
		                    </div>
		                    <div class="col-sm-6">
		                    	{{ include('template/show_pokemon.html.twig', { 'pokemon': fight.pokemon2 }) }}
		                    </div>
		                   
		                </div>
	                </li>
			  	

				{% endfor %}
			</ul>
		</div>
	</div>


    
{% endblock %}
